<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- ערכת הנושא הבסיסית של האפליקציה -->
    <style name="Base.Theme.Kalistanics" parent="Theme.MaterialComponents">
        <!-- כאן אפשר להתאים אישית את ערכת הנושא הקלה -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="ButtonGray" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/darker_gray</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonRed" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/RED</item>
        <item name="android:textColor">@color/black</item> <!-- טקסט לבן יתאים על רקע אדום -->
    </style>

    <style name="CustomSpinner" parent="Widget.AppCompat.Spinner"><!-- SPINER -->
        <item name="android:popupBackground">@android:color/white</item> <!-- רקע החלונית -->
        <item name="android:textColor">@android:color/black</item>        <!-- צבע הטקסט -->
    </style>

    <style name="Theme.Kalistanics" parent="Base.Theme.Kalistanics">
        <!-- צבעי המפתח הראשיים -->
        <!-- שים לב: כאן מגדירים את צבע הרקע של ה-Action Bar ללבנבן -->
        <item name="colorPrimary">@android:color/white</item>

        <!-- הגדרת רקע לבן לכל החלונות -->
        <item name="android:windowBackground">@color/white</item>

        <!-- הגדרת צבע טקסט שחור כברירת מחדל -->
        <item name="android:textColor">@color/black</item>

        <!-- הגדרת רקע לבן לתפריטים נפתחים (popup menus) -->
        <item name="android:popupBackground">@color/white</item>

        <!-- ביטול מצב כהה (Dark Mode) כדי שלא ישנה צבעים אוטומטית -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- הגדרת ערכת נושא עבור התפריטים הנפתחים בשורת הפעולה (ActionBar) -->
        <item name="actionBarPopupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>

        <!-- הוספת צבע רקע לבן לסטטוס בר -->
        <item name="android:statusBarColor">@android:color/white</item>

        <!-- הפיכת הטקסט והאייקונים בסטטוס בר לכהים (רק מ-API 23 ומעלה) -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- הגדרת ערכת נושא (ThemeOverlay) ל-ActionBar כדי שהטקסט והאייקונים יהיו שחורים -->
        <item name="actionBarTheme">@style/ActionBarTheme</item>
    </style>

    <!-- סגנון ל-ActionBar: רקע לבן, טקסט שחור -->
    <style name="ActionBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
    </style>

    <!-- סגנון לכותרת ה-ActionBar -->
    <style name="ActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
